@using GalleryBLL.Models
@model GalleryWeb.Models.Artists
@{
    ViewData["Title"] = "[ Artists ]";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Page Content-->

<section class="py-5">
    <div class="container">
        <!-- Page Heading/Breadcrumbs-->
        <h1 class="mt-4 mb-3">
            Represented Artists
            <small>...get to know them better!</small>
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Represented Artists</li>
        </ol>
        <div class="row">
            @foreach (ArtistModel a in Model.Items)
            {
                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="card h-100">                        
                        <a asp-controller="Artists" asp-action="ShowArtist" asp-route-artistId="@a.Id"><img class="card-img-top" src="@a.Url" alt="@a.Name" /></a>
                        <div class="card-body">
                            <h4 class="card-title"><a asp-controller="Artists" asp-action="ShowArtist" asp-route-artistId="@a.Id">@a.Name @a.Surname </a></h4>
                            <p class="card-text">@a.ArtDirection</p>
                            <p class="card-text">@a.City.Country.Name, @a.City.Name</p>
                        </div>
                    </div>
                </div>
            }

        </div>
        <!-- Pagination-->
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">«</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#!">1</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">»</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </div>
</section>